extends ../../layouts/default
block head
  title Edit Event

block body
  div.row
    div.col-sm-8
      div.page-header
        h1 Edit Event
        form(method='post',action='/events/update/#{event._id}')
          div.form-group
            label Event Name:
            input.form-control(name='name',type='text',value='#{event.name}')
          div.form-group
            label Event Description:
            textarea.form-control(name='description',type='text') #{event.description}
          div.form-group
            label Venu:
            input.form-control(name='venu',type='text' value='#{event.venu}')
          div.form-group
            label Event Date:
            input.form-control(name='date',type='date',value='#{event.date}')
          div.form-group
            label Start Time:
            input.form-control(name='startTime',type='time',value='#{event.startTime}')
          div.form-group
            label End Time:
            input.form-control(name='endTime',type='time',value='#{event.endTime}')
          div.form-group
            button.btn.btn-primary.btn-signup(type='submit') Save
            Event
    div.col-sm-4
      div.page-header
        h1 sidebar
